<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <materialDesign:BundledTheme
        x:Key="MaterialDesignBundledTheme"
        BaseTheme="Dark"
        PrimaryColor="BlueGrey"
        SecondaryColor="Cyan" />

    <FontFamily x:Key="AppFontFamily">Bahnschrift</FontFamily>

    <LinearGradientBrush x:Key="AppWindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#0F1216" />
        <GradientStop Offset="1" Color="#1B2027" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AppWindowBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#35FFFFFF" />
        <GradientStop Offset="0.5" Color="#222D9BFF" />
        <GradientStop Offset="1" Color="#2AFFFFFF" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="AppBlobPrimaryBrush">
        <GradientStop Offset="0" Color="#4DA8FF" />
        <GradientStop Offset="1" Color="Transparent" />
    </RadialGradientBrush>

    <RadialGradientBrush x:Key="AppBlobSecondaryBrush">
        <GradientStop Offset="0" Color="#31F1D2" />
        <GradientStop Offset="1" Color="Transparent" />
    </RadialGradientBrush>

    <SolidColorBrush x:Key="AppCardBackgroundBrush" Color="#D0181E24" />
    <SolidColorBrush x:Key="AppCardBorderBrush" Color="#26FFFFFF" />
    <SolidColorBrush x:Key="AppSurfaceBrush" Color="#14000000" />

    <LinearGradientBrush x:Key="AppAccentGradientBrush" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Offset="0" Color="#4DA8FF" />
        <GradientStop Offset="0.5" Color="#31F1D2" />
        <GradientStop Offset="1" Color="#4DA8FF" />
    </LinearGradientBrush>

    <Color x:Key="AppGlowColor">#31F1D2</Color>
    <Color x:Key="AppShadowColor">#1A0B0F16</Color>
</ResourceDictionary>
